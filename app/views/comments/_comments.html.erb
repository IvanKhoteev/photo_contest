<% comments.each do |comments| %>
  <% unless @printed_comment.include?(comments.id) %>
  <div class='comment_body' style="background-color: white; border: dotted 1px; padding: 5px; margin-left: 30px; margin-bottom: 4px;">
    <% comments.body.each_line do |line|  %>
      <span style="font-size: 1em;"> <%= line %></span><br>
    <% end %>
    <% user = User.find(comments.user_id.to_i) %>
    <span width='100%' style="font-size: 0.7em"> Дата публикации: <%= comments.created_at %> Автор комментария: <%= user.name %></span>
    <% if current_user %>
      <span width='100%' style="font-size: 0.7em"><%= link_to 'Ответить на комментарий', new_user_photo_comment_comment_path(parent_comment_id: comments, user_id: current_user, photo_id: comments.photo_id) %></span>
    <% end %>
    <% @printed_comment << comments.id %>
    <% end %>

    <%= render '/comments/comments', comments: comments.sub_comments if comments.sub_comments %>

  </div>
<% end %>
