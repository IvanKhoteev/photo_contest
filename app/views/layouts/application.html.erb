<!DOCTYPE html>
<html>
<head>
  <title>PhotoContest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<nav class="navbar navbar-inverse">
	  <div class="container">
	    <div class="navbar-header">
	      <%= link_to 'Фотоконкурс', root_path, class: 'navbar-brand' %>
	    </div>
	    <div id="navbar">
	    	<% if current_user %>
	        <ul class="nav navbar-nav pull-right">
	        	<li><%= link_to 'Добавить новое фото', new_photo_gallery_path %></li>
	        	<li><%= link_to 'Посмотреть свои фото', photo_gallery_path(current_user.id) %></li>
	          <li><%= image_tag current_user.image_url, alt: current_user.name %></li>
	          <li><%= link_to 'Выйти', logout_path, method: :delete %></li>
	        </ul>
	      <% else %>
	        <ul class="nav navbar-nav">
	        	<li><%= link_to 'Facebook', '/auth/facebook' %></li>
		      	<li><%= link_to 'Вконтакте', '/auth/vkontakte' %></li>
		      </ul>
	      <% end %>
	    </div>
	  </div>
	</nav>
	 
	<div class="container">
	  <% flash.each do |key, value| %>
	    <div class="alert alert-<%= key %>">
	      <%= value %>
	    </div>
	  <% end %>
	 
	  <%= yield %>
	</div>

</body>
</html>
