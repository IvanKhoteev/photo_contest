<%= will_paginate @photo_galleries %>
<% @photo_galleries.each do |photo| %>
  <div class="jumbotron">
    <table>
      <tr>

        <td width='220' valign='top' align='middle'>
          <%= image_tag photo.photography %><br>
          <%= photo.photo_name %><br>
          <% user = User.find(photo.user_id) %>
          Автор фото: <%= user.name %>    
        </td>

        <td width='165' valign='top' align='middle'>
          <% if photo.likes_count.nil? %>
            <h7>За данное фото</h7><br>
            <h7>еще не голосовали</h7>
          <% else %>
            <h7>Количество</h7><br>
            <h7>голосов:</h7><br>
            <h2><%= photo.likes_count %></h2>
          <% end %>
          <%= form_for ([photo,photo.likes.build]) do |f| %>
            <%= f.submit 'LIKE THIS',  class: 'btn btn-link'%>
          <% end %>
        </td>
     
        <td width='60%'valign='top' align='left'>
          <% if photo.comments.any? %>
            <p>Существующие комментарии:<p>
            <% photo.comments.each do |compr| %>
              <div>
                <h5>Комментарий: "<%= compr.body %>"</h5>
                <% user = User.find(compr.user_id.to_i) %>
                <h5>Автор: <%= user.name %></h5>
                <h5>_______________</h5>
              </div>
            <% end %>
          <% else %>
            <h5 align='right'>Комментариев пока нет, оставьте первый комментарий</h5>
          <% end %>
          <%= form_for([photo, photo.comments.build]) do |f| %>
            <p align='right'>
              <%= f.label 'Оставьте ваш комментарий' %><br>
              <%= f.text_area :body %>
            </p>
            <p align='right'>
              <%= f.submit 'Разместить комментарий', class: 'btn btn-primary' %>
            </p>
          <% end %>
        </td>

      </tr>
    </table>
  </div>
<% end %>
<%= will_paginate @photo_galleries %>
