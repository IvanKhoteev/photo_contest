<div class= 'jimbotron'>
	<table valign='middle' width='100%'>
		<tr>
			<td height='80em'>
        <%= render 'sorting' %>
      </td>
      <td align='right'>
        <%= form_tag("instagram_search", method: "get") do %>
          <%= label_tag(:q, "Найти фото по хэш-тегу:") %><br>
          <%= text_field_tag(:q) %>
          <%= submit_tag("Найти") %>
        <% end %>
      </td>
      
      <td align='right'>
      	<%= render 'search_user' %>
      </td>
    </tr>
  </table>
</div>
