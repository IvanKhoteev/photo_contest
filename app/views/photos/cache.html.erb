                        <% if current_user %>
                          <span width='100%' style="font-size: 0.7em"><%= link_to 'Ответить на комментарий', new_user_photo_comment_comment_path(parent_comment_id: sub_sub, user_id: current_user, photo_id: photo) %></span>
                        <% end %>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>










