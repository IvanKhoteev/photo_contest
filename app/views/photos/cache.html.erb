          <div>
            <% printed_comment_array = [] %>
            <% photo.comments.each do |com| %>
              <div>
                  <% com.body.each_line do |line|  %>
                    <span style="font-size: 1em;"> <%= line %></span><br>
                  <% end %>
                  <% user = User.find(com.user_id.to_i) %>
                  <span width='100%' style="font-size: 0.7em"> Дата публикации: <%= com.created_at %> Автор комментария: <%= user.name %></span>
                  <% if current_user %>
                    <span width='100%' style="font-size: 0.7em"><%= link_to 'Ответить на комментарий', new_user_photo_comment_comment_path(parent_comment_id: com, user_id: current_user, photo_id: photo) %></span>
                  <% end %>
                
              
                  <% sub_com = com.sub_comments %>
                  <% sub_com.each do |sub_sub| %>
                    <% printed_comment_array << sub_sub %>
                    <% unless printed_comment_array.include?(sub_sub.id) do%>
                      <div style="margin-left: 20%">
                        <% sub_sub.body.each_line do |line|  %>
                          <span style="font-size: 1em;"> <%= line %></span><br>
                        <% end %>
                        <% user = User.find(sub_sub.user_id.to_i) %>
